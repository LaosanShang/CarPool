<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <title>@ViewBag.Title - 拼车</title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Content/mui/js/mui.js"></script>
    <link href="~/Content/mui/css/mui.min.css" rel="stylesheet" />
    <style>
        .mui-icon ul {
            padding: 0;
            margin: 0;
            margin-top: -15px;
        }

        .mui-icon li {
            list-style: none;
            height: 24px;
        }
    </style>
</head>
<body>
    <header class="mui-bar mui-bar-nav">
        <a class="mui-icon mui-icon-home mui-pull-left" href="@Url.Action("Index","Home")" ></a>
        <h1 class="mui-title">我要拼车</h1>
        <a class="mui-icon mui-pull-right" href="@Url.Action("Publish","Home")">
            <ul>
                <li><span class="mui-icon mui-icon-compose"></span></li>
                <li><span style="font-size:.5em;">发布</span></li>
            </ul>
        </a>
        <a class="mui-icon mui-pull-right" style="margin-right:5px;" href="@Url.Action("Register","Account")">
            <ul>
                <li><span class="mui-icon mui-icon-contact"></span></li>
                <li><span style="font-size:.5em;">注册</span></li>
            </ul>
        </a>
    </header>
    <div id="content" class="mui-content">
        @RenderBody()
    </div>
</body>
</html>